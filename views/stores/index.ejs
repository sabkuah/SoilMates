<% layout('layouts/boilerplate')%>
<div class="snakeplant-bg"></div>
<div class="store__index">
  <h1>List of Stores:</h1>
  <div class="row d-flex justify-content-center mb-4">
    <% for (let store of stores){%>
    <div class="card store__index-card text-center">
      <a href="/stores/<%=store._id%>">
        <img <% store.image ? src="<%=store.image%>" : "" %> class="img-fluid
        store__index-img" />
      </a>

      <div class="card-body">
        <h5 class="card-title"><%= store.name %></h5>
        <p class="card-text"><%= store.city%></p>
        <a href="/stores/<%=store._id%>"><button>View</button></a>
      </div>
      <% }%>
    </div>
  </div>
</div>
