<% layout('layouts/boilerplate')%>
<div class="cactus-bg"></div>
<div class="plant__new">
  <h1>Add A New Plant</h1>
  <h2><%= store.name %></h2>

  <form
    action="/stores/<%= store._id %>/plants/new"
    method="POST"
    novalidate
    class="needs-validation"
  >
    <div class="row mb-3">
      <div class="col">
        <label for="name">Name</label>
        <input
          type="text"
          class="form-control"
          name="name"
          id="name"
          required
        />
      </div>
      <div class="col">
        <label for="image">Image URL</label>
        <input
          type="text"
          class="form-control"
          id="image"
          name="image"
          required
        />
      </div>
    </div>

    <div class="row mb-3">
      <div class="col">
        <div class="form-group">
          <label for="type">Type 🌱</label>
          <select class="form-control" id="type" name="type" required>
            <% for( let type of formSelects.plantTypes) { %>
            <option value="<%= type %>"><%= type %></option>
            <% } %>
          </select>
        </div>
      </div>
      <div class="col">
        <div class="form-group">
          <label for="water">Water Needs💧</label>
          <select class="form-control" id="water" name="water" required>
            <% for( let need of formSelects.waterNeeds) { %>
            <option value="<%= need %>"><%= need %></option>
            <% } %>
          </select>
        </div>
      </div>
      <div class="col">
        <div class="form-group">
          <label for="light">Light Needs 🔆 </label>
          <select class="form-control" id="light" name="light" required>
            <% for( let need of formSelects.lightNeeds) { %>
            <option value="<%= need %>"><%= need %></option>
            <% } %>
          </select>
        </div>
      </div>
      <!-- <div class="col">
        Pet Friendly? 🐕
        <div>
          <div class="form-check form-check-inline">
            <input
              class="form-check-input"
              type="checkbox"
              id="yes"
              name="isPetFriendly"
              value="1"
            />
            <label class="form-check-label" for="yes">Yes</label>
          </div>
        </div>
      </div> -->
    </div>

    <div class="form-group mb-3">
      <label for="description">Description</label>
      <textarea
        class="form-control"
        id="description"
        rows="3"
        name="description"
        required
      ></textarea>
    </div>

    <button class="btn btn-success">Submit</button>
  </form>
</div>
