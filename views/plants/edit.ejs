<% layout('layouts/boilerplate')%>
<div class="cactus-bg"></div>
  <div class="plant__new container">
    <h1>Edit Plant</h1>
    <form action="/stores/<%= plant.store._id %>/plants/<%= plant._id %>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
      <div class="row mb-3">
        <div class="col">
          <label for="name">Name</label>
          <input type="text" class="form-control" name="name" id="name" value="<%= plant.name %>" required/>
        </div>
        <div class="col">
          <label for="image">Add Images</label>
          <input type="file" name="image" id="" multiple />
        </div>
        <!-- <div class="col">
          <label for="image">Image URL</label>
          <input type="text" class="form-control" id="image" name="image" value="<%= plant.image %>" required/>
        </div> -->
      </div>

      <div class="row mb-3">
        <div class="col">
          <div class="form-group">
            <label for="type">Type 🌱</label>
            <select class="form-control" id="type" name="type" required>
              <% for( let type of formSelects.plantTypes) { %>
              <option value="<%= type %>" <%=plant.type === type ? 'selected' : ""%>>
        <%= type %></option>
              <% } %>
            </select>
          </div>
        </div>
        <div class="col">
          <div class="form-group">
            <label for="water">Water Needs💧</label>
            <select class="form-control" id="water" name="water" required>
              <% for( let need of formSelects.waterNeeds) { %>
              <option value="<%= need %>" <%=plant.water === need ? 'selected' : ""%> ><%= need %></option>
              <% } %>
            </select>
          </div>
        </div>
        <div class="col">
          <div class="form-group">
            <label for="light">Light Needs 🔆 </label>
            <select class="form-control" id="light" name="light" required>
              <% for( let need of formSelects.lightNeeds) { %>
              <option value="<%= need %>" <%=plant.light === need ? 'selected' : ""%>><%= need %></option>
              <% } %>
            </select>
          </div>
        </div>
