<% layout('layouts/boilerplate')%>

  <div class="plant__new container">
    <h1>Edit Plant</h1>
    <form action="/plants/<%= plant._id %>?_method=PUT" method="POST">
      <div class="row">
        <div class="col">
          <label for="name">Name</label>
          <input type="text" class="form-control" name="name" id="name" value="<%= plant.name %>"/>
        </div>
        <div class="col">
          <label for="image">Image URL</label>
          <input type="text" class="form-control" id="image" name="image" value="<%= plant.image %>"/>
        </div>
      </div>

      <div class="row">
        <div class="col">
          <div class="form-group">
            <label for="type">Type üå±</label>
            <select class="form-control" id="type" name="type">
              <% for( let type of formSelects.plantTypes) { %>
              <option value="<%= type %>" <%=plant.type === type ? 'selected' : ""%>>
        <%= type %></option>
              <% } %>
            </select>
          </div>
        </div>
        <div class="col">
          <div class="form-group">
            <label for="water">Water Needsüíß</label>
            <select class="form-control" id="water" name="water">
              <% for( let need of formSelects.waterNeeds) { %>
              <option value="<%= need %>" <%=plant.water === need ? 'selected' : ""%> ><%= need %></option>
              <% } %>
            </select>
          </div>
        </div>
        <div class="col">
          <div class="form-group">
            <label for="light">Light Needs üîÜ </label>
            <select class="form-control" id="light">
              <% for( let need of formSelects.lightNeeds) { %>
              <option value="<%= need %>" <%=plant.light === need ? 'selected' : ""%>><%= need %></option>
              <% } %>
            </select>
          </div>
        </div>
        <div class="col">
            Pet Friendly? üêï
            <div>
                <div class="form-check form-check-inline">
                    <!-- Not sure how to pull boolean value into edit form -->
                  <input
                    class="form-check-input"
                    type="checkbox"
                    id="yes"
                    name="isPetFriendly"
                    value= 1
                  />
                  <label class="form-check-label" for="yes">Yes</label>
                </div>
                <div class="form-check form-check-inline">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    id="no"
                    name="isPetFriendly"
                    value= 0
                  />
                  <label class="form-check-label" for="no">No</label>
                </div>
            </div>
        </div>
      </div>

      <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" id="description" rows="3" name="description"><%= plant.description %></textarea>
      </div>

      <button class="btn btn-success">Submit</button>

      
    </form>
  </div>
</h1>
