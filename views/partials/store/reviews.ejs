<div class="store__show-reviews col-10 offset-1 mt-3 py-2">
  <h1 class="text-center">Reviews</h1>
  <!-- Add Review Collapsible -->
  <div class="store__show-addReview">
    <p>
      <button
        class="btn btn-success"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#reviewForm"
        aria-expanded="false"
        aria-controls="collapseExample"
      >
        Add A Review
      </button>
    </p>

    <div class="collapse mb-3" id="reviewForm">
      <div class="card card-body">
        <!-- Add Review Form  -->
        <form
          action="/stores/<%= store._id %>/reviews"
          method="POST"
          class="needs-validation"
          novalidate
        >
          <label for="selection" class="form-label">Selection</label>
          <input
            type="range"
            class="form-range"
            min="1"
            max="5"
            step="1.0"
            id="selection"
            name="selection"
          />
          <label for="service" class="form-label">Service</label>
          <input
            type="range"
            class="form-range"
            min="1"
            max="5"
            step="1.0"
            id="service"
            name="service"
          />

          <div class="form-group mb-3">
            <label for="body">Review</label>
            <textarea
              class="form-control"
              id="body"
              rows="2"
              name="body"
              required
            ></textarea>
          </div>

          <button>Submit</button>
        </form>
      </div>
    </div>
  </div>
  <!-- List of Reviews  -->
  <div class="col">
    <% if(store.reviews && store.reviews.length){ %> <% for(let review of
    store.reviews){ %>
    <div class="card m-2">
      <div class="row mb-2">
        <div class="col-2">
          <p><%= review.author.username %></p>
          <p class="text-muted"><%= review.dateAdded%></p>
          <% if(currentUser && review.author.equals(currentUser._id)) %>
          <form
            action="/stores/<%= store._id %>/reviews/<%= review._id%>?_method=DELETE"
            method="POST"
          >
            <button class="btn btn-danger">ùó´</button>
          </form>
          : "" %>
        </div>
        <div class="col-10 card-body">
          <div class="row mb-2">
            <div class="col">Selection: <%= review.selection %></div>
            <div class="col">Service: <%= review.service %></div>
          </div>
          <div class="text-start"><%= review.body %></div>
        </div>
      </div>
    </div>
    <% }} else { %>
    <p class="text-center">There are no reviews for this store.</p>
    <% } %>
  </div>
</div>
